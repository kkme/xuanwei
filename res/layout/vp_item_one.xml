<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:background="@drawable/lunbo_one"
            android:layout_column="4"
            android:columnCount="4"
            android:alignmentMode="alignBounds"
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
                  android:layout_marginRight="60px"
                 >
        <TextView android:id="@id/tv_type"
                  android:textSize="50px"
                  android:text="直播中"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <TextView android:id="@id/tv_benlun"
                  android:textSize="35px"
                  android:layout_marginTop="10px"
                  android:text="本轮  (12)"
                  android:textColor="@android:color/white"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout android:orientation="vertical"
            >
        <ImageView android:id="@id/iv_against_icon0"
                   android:src="@drawable/zhejiang_lucheng_icon"
                   style="@style/team_icon" />
        <TextView android:id="@id/tv_benlun_against0"
                  android:textSize="35px"
                  android:text="杭州绿城"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"  android:layout_marginRight="10px"
                  android:layout_marginLeft="10px" >
        <TextView android:id="@id/tv_benlun_date"
                  android:textSize="35px"
                  android:text="01天12小时24分"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="120dp"
                        android:layout_marginTop="5px"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                        android:layout_gravity="right"
                      android:background="@drawable/score_box">
                    <TextView android:id="@id/tv_benlun_score0" android:text="2"
                              android:textColor="@android:color/white" android:textStyle="bold"
                              android:textSize="45dp"
                              android:layout_alignParentLeft="true"
                              android:layout_centerVertical="true"
                              android:layout_marginLeft="50px"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:src="@drawable/score_points"
                               android:layout_centerInParent="true"
                               android:layout_width="15px" android:layout_height="wrap_content" />
                    <TextView android:id="@id/tv_benlun_score1"    android:text="2"
                              android:textSize="45dp"
                              android:textColor="@android:color/white" android:textStyle="bold"
                              android:layout_marginRight="40px"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
            >
        <ImageView android:id="@id/iv_against_icon1"
                   android:src="@drawable/shanghai_shenxin_icon"
                   style="@style/team_icon" />
        <TextView android:id="@id/tv_benlun_against1"
                  android:textSize="35px"
                  android:text="上海申鑫"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</GridLayout>