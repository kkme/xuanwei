<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:paddingTop="20px"
            android:paddingLeft="30px"
            android:paddingBottom="20px"
            android:columnCount="3"
            android:rowCount="3"
            android:useDefaultMargins="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView android:id="@id/iv_item_0" android:layout_column="0" android:layout_width="80dp"
               android:layout_rowSpan="2" android:layout_marginBottom="10px"
               style="@style/img_icon" android:layout_columnSpan="2"/>

    <TextView android:id="@id/tv_item_0" android:textSize="@dimen/font_size_14" android:gravity="left"
              android:layout_column="2" android:layout_row="0" android:layout_width="@dimen/news_width"
              android:singleLine="true" android:textColor="@color/left_list_fc"/>

    <TextView android:id="@id/tv_item_1" style="@style/list_item" android:maxLines="2" android:layout_column="2"
              android:lineSpacingExtra="10px" android:layout_marginTop="20px" android:layout_width="@dimen/news_width"
              android:gravity="left"  android:ellipsize="end"
               android:layout_row="1" android:textColor="@android:color/white"
              android:textSize="@dimen/font_size_14" android:layout_rowSpan="2"  />

    <TextView android:id="@id/tv_item_2" android:layout_row="2" android:layout_column="0" android:layout_marginLeft="12dp"
              android:textSize="@dimen/font_size_14" android:textColor="@android:color/white"/>

    <ImageView android:id="@id/iv_item_1" style="@style/img_msg" android:layout_column="1"
               android:layout_row="2"/>
</GridLayout>